Min element of an array
function minInArray(arr){
let min = arr[0];
for ( let i = 1; i < arr.length; i++){
if ( arr[i] < min)
min = arr[i];
}
return min;
}
/////////////////////////////////////////////////////////////////////////////
//max element of array
function maxInArray(arr){
let max = arr[0];
for (let i = 1; i < arr.length; i++){
if ( arr[i] > max)
max = arr[i];
}
return max;
}
