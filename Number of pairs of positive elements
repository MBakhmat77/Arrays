
//////////////////////////////////////////////// //////////////////
// Number of pairs of positive elements
// Write a function counOfPositivePairs that takes an arr array as an argument,
// and returns the number of pairs of adjacent elements that are positive numbers.
function counOfPositivePairs (arr) {
let count = 0;
for (let i = 0; i <arr.length; i ++) {
if (arr [i]> 0 && arr [i + 1]> 0)
count ++;
}
return count;
}
